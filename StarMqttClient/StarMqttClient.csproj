<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Authors>mewtek</Authors>
        <Description>MQTT client library for WeatherStar server applications</Description>
        <Copyright>AGPL v3.0</Copyright>
        <RepositoryUrl>https://github.com/wxstar-srp/starmqttclient</RepositoryUrl>
        <Company>WxStarSRP</Company>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="MQTTnet" Version="4.3.7.1207" />
      <PackageReference Include="StarAPI.NET" Version="1.0.0" />
    </ItemGroup>

</Project>
